# ==================================================
# GC Video Scope Analyzer - Environment Variables
# ==================================================

# ------------------------------
# Supabase Configuration
# ------------------------------
# Get these from: https://supabase.com/dashboard/project/_/settings/api

# Supabase project URL (e.g., https://xxxxx.supabase.co)
SUPABASE_URL=your_supabase_url_here

# Supabase anon/public key (for client-side, respects RLS)
SUPABASE_KEY=your_supabase_anon_key_here

# Supabase service role key (for admin operations, bypasses RLS)
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# ------------------------------
# AI Services
# ------------------------------

# Anthropic (Claude) API Key
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AssemblyAI API Key
# Get from: https://www.assemblyai.com/dashboard/signup
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# ------------------------------
# Redis Configuration
# ------------------------------
# Local: redis://localhost:6379
# Render: redis://red-xxx:6379 (provided by Render)
REDIS_URL=redis://localhost:6379

# ------------------------------
# Application Settings
# ------------------------------
APP_NAME="GC Video Scope Analyzer"
APP_VERSION="2.0.0"

# Set to true for development, false for production
DEBUG=true

# ------------------------------
# File Upload Limits
# ------------------------------
MAX_FILE_SIZE_MB=500

# ------------------------------
# Claude Configuration
# ------------------------------
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.3

# ------------------------------
# AssemblyAI Configuration
# ------------------------------
# Optional: Webhook URL for async transcription (leave empty for sync)
ASSEMBLYAI_WEBHOOK_URL=

# ==================================================
# SETUP INSTRUCTIONS
# ==================================================
#
# 1. Copy this file to .env:
#    cp .env.example .env
#
# 2. Fill in all the values above
#
# 3. Never commit .env to git (it's in .gitignore)
#
# ==================================================
